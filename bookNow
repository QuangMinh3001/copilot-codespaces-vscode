        <div class="search-container">
            <input type="text" id="searchInput" placeholder="Nhập tên sách hoặc tác giả..." oninput="searchBooks()">
                    <style>.search-container {
                        margin: 20px 0;
                        text-align: center;
                    }
                    
                    #searchInput {
                        width: 80%;
                        max-width: 500px;
                        padding: 10px;
                        font-size: 16px;
                        border: 1px solid #ddd;
                        border-radius: 5px;
                        outline: none;
                    }
                    
                    #searchInput:focus {
                        border-color: #27ae60;
                        box-shadow: 0 0 5px rgba(39, 174, 96, 0.5);
                    }</style>
                    <script>function searchBooks() {
                        // Lấy giá trị nhập vào từ ô tìm kiếm
                        const searchQuery = document.getElementById('searchInput').value.toLowerCase();
                    
                        // Lấy tất cả các thẻ sách
                        const books = document.querySelectorAll('.book-card');
                    
                        // Duyệt qua từng thẻ sách và kiểm tra
                        books.forEach(book => {
                            const title = book.querySelector('h3').textContent.toLowerCase();
                            const author = book.querySelector('p').textContent.toLowerCase();
                    
                            // Kiểm tra xem tiêu đề hoặc tác giả có chứa từ khóa tìm kiếm không
                            if (title.includes(searchQuery) || author.includes(searchQuery)) {
                                book.style.display = 'block'; // Hiển thị sách nếu phù hợp
                            } else {
                                book.style.display = 'none'; // Ẩn sách nếu không phù hợp
                            }
                        });
                    }</script>
                    </div>

        
    </nav>

